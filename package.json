{
  "name": "audioMotion",
  "version": "22.1.0-beta.1",
  "private": true,
  "author": "Henrique Vianna <hvianna@gmail.com> (https://henriquevianna.com)",
  "license": "AGPL-3.0",
  "main": "app/index.js",
  "scripts": {
    "build": "webpack",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "server": "node src/legacy-server.js"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "app/audioMotion.ico",
        "ignore": [
          "^(/docs$)",
          "^(/src$)",
          "^(/.github$)",
          "^(/.well-known$)",
          ".editorconfig",
          ".gitignore",
          "_config.yml",
          "docker-compose.yml",
          "^(/webpack.config.js$)"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "audioMotion",
            "iconUrl": "app/audioMotion.ico",
            "setupIcon": "app/audioMotion.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "app/audioMotion.icns"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-dmg": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "audiomotion-analyzer": "^3.6.0",
    "buffer": "^6.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.1.3",
    "electron": "^16.0.0",
    "mini-css-extract-plugin": "^2.4.4",
    "music-metadata-browser": "^2.5.0",
    "notie": "^4.3.1",
    "open": "~7.4.2",
    "process": "^0.11.10",
    "readline-sync": "^1.4.10",
    "sortablejs": "~1.10.2",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "debounce": "^1.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "express": "^4.16.4",
    "semver": "^7.3.5",
    "serve-index": "^1.9.1"
  },
  "optionalDependencies": {
    "appdmg": "^0.6.2"
  }
}
